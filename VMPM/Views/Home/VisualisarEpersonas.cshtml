<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <button class="btn-success   btn-lg  btn-lg 	glyphicon glyphicon-arrow-left" onclick="location.href='@Url.Action("Index","Home")'"></button>

        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div class="col-lg-4">
            <br />
            <br />
            <br />
            <form action="/Home/Guardar_Personas" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" disabled placeholder="Nombre" name="NOMBRE" value="@Model.NOMBRE" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"  disabled placeholder="Apellido" name="APELLIDO" value="@Model.APELLIDO" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Cedula" name="CEDULA" disabled value="@Model.CEDULA" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Direccion" name="DIRECCION" disabled>@Model.DIRECCION</textarea>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class=" btn-lg btn-danger">ELIMINAR</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-4"></div>
</div>



